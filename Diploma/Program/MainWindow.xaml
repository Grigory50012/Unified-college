                    <Button  x:Name="bExit" Grid.Column="1" Grid.RowSpan="3" Cursor="Hand" Width="25" Height="30" Background="Transparent"  HorizontalAlignment="Right" Margin="0,12,20,12" Foreground="{x:Null}" BorderBrush="Transparent" Click="bExit_Click" >
                        <Button.ToolTip>
                            <ToolTip Background="#f1f2f7" Foreground="Black">
