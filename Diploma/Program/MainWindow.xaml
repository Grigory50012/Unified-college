<Window x:Class="VedomostPropuskovPGEK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VedomostPropuskovPGEK"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:extensions="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Приложение куратора" Height="720" Width="1280" Background="White" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!--#region Список пропусков-->
        <!--#region Combobox фильтрация -->
        <ControlTemplate x:Key="ComboBoxToggleButton1" TargetType="{x:Type ToggleButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition  />
                </Grid.ColumnDefinitions>
                <Border
          x:Name="Border" 
          Grid.ColumnSpan="2"
          CornerRadius="10"
          Background="#329A93"
          BorderBrush="#329A93"
          BorderThickness="0" />
                <Border 
          Grid.ColumnSpan="2"
          CornerRadius="8" 
          Margin="2" 
          Background="White" 
          BorderBrush="White"
          BorderThickness="0" >
                    <Image HorizontalAlignment="Left" Width="20" Height="20" Margin="10,0,0,0" Cursor="Hand" Source="Image\Vector.png" />
                </Border>
                <Path 
          x:Name="Arrow"
          Grid.Column="2"     
          Fill="White"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="Border" Property="Background" Value="LightGray" />
                    <Setter TargetName="Border" Property="BorderBrush" Value="Gray" />
                    <Setter Property="Foreground" Value="DarkGray"/>
                    <Setter TargetName="Arrow" Property="Fill" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
            <Border x:Name="PART_ContentHost" Focusable="False" Height="30" BorderThickness="0" Background="Transparent"/>
        </ControlTemplate>

        <Style x:Key="CmoboboxStyle1" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton 
                    x:Name="ToggleButton" 
                    Template="{StaticResource ComboBoxToggleButton1}" 
                    Grid.Column="2" 
                    Focusable="false"
                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                    ClickMode="Press"/>
                            <ContentPresenter
                        x:Name="ContentSite"
                        IsHitTestVisible="False" 
                        Content="{TemplateBinding SelectionBoxItem}"
                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                        Margin="50,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox"
                        Style="{x:Null}" 
                        Template="{StaticResource ComboBoxTextBox}" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Text="{TemplateBinding Text}"
                        Focusable="True" 
                        Background="Transparent"
                        Visibility="Hidden"
                        Foreground="DarkBlue"
                        IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup 
                        x:Name="Popup"
                        Placement="Bottom"
                        IsOpen="{TemplateBinding IsDropDownOpen}"
                        AllowsTransparency="True" 
                        Focusable="False"
                        PopupAnimation="Slide">
                                <Grid 
                          x:Name="DropDown"
                          SnapsToDevicePixels="True"                
                          MinWidth="{TemplateBinding ActualWidth}"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                x:Name="DropDownBorder"
                                Background="#fafafa"
                                BorderThickness="4,0,0,0"
                                BorderBrush="#329A93"/>
                                    <ScrollViewer Margin="4,0,0,0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="LightGray"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0,0,0,0"/>
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Calendar2ItemStyle" TargetType="{x:Type CalendarItem}">
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CalendarItem}">
                        <ControlTemplate.Resources>
                            <DataTemplate x:Key="{x:Static CalendarItem.DayTitleTemplateResourceKey}">
                                <TextBlock Foreground="#FF333333" FontWeight="Bold" FontSize="9.5" FontFamily="Verdana" HorizontalAlignment="Center" Margin="0,6,0,6" Text="{Binding}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </ControlTemplate.Resources>
                        <Grid x:Name="PART_Root">
                            <Grid.Resources>
                                <SolidColorBrush x:Key="DisabledColor" Color="#A5FFFFFF"/>
                            </Grid.Resources>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="PART_DisabledVisual"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="1">
                                <Border BorderBrush="#FFFFFFFF" BorderThickness="2" CornerRadius="1">
                                    <Grid>
                                        <Grid.Resources>
                                            <ControlTemplate x:Key="PreviousButtonTemplate" TargetType="{x:Type Button}">
                                                <Grid Cursor="Hand">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="MouseOver">
                                                                <Storyboard>
                                                                    <ColorAnimation Duration="0" To="#FF73A9D8" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="path"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                            <VisualState x:Name="Disabled">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To=".5" Storyboard.TargetProperty="(Shape.Fill).(Brush.Opacity)" Storyboard.TargetName="path"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <Rectangle Fill="#11E5EBF1" Opacity="1" Stretch="Fill"/>
                                                    <Grid>
                                                        <Path x:Name="path" Data="M288.75,232.25 L288.75,240.625 L283,236.625 z" Fill="#FF333333" HorizontalAlignment="Left" Height="10" Margin="14,-6,0,0" Stretch="Fill" VerticalAlignment="Center" Width="6"/>
                                                    </Grid>
                                                </Grid>
                                            </ControlTemplate>
                                            <ControlTemplate x:Key="NextButtonTemplate" TargetType="{x:Type Button}">
                                                <Grid Cursor="Hand">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="MouseOver">
                                                                <Storyboard>
                                                                    <ColorAnimation Duration="0" To="#FF73A9D8" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="path"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                            <VisualState x:Name="Disabled">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To=".5" Storyboard.TargetProperty="(Shape.Fill).(Brush.Opacity)" Storyboard.TargetName="path"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <Rectangle Fill="#11E5EBF1" Opacity="1" Stretch="Fill"/>
                                                    <Grid>
                                                        <Path x:Name="path" Data="M282.875,231.875 L282.875,240.375 L288.625,236 z" Fill="#FF333333" HorizontalAlignment="Right" Height="10" Margin="0,-6,14,0" Stretch="Fill" VerticalAlignment="Center" Width="6"/>
                                                    </Grid>
                                                </Grid>
                                            </ControlTemplate>
                                            <ControlTemplate x:Key="HeaderButtonTemplate" TargetType="{x:Type Button}">
                                                <Grid Cursor="Hand">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="MouseOver">
                                                                <Storyboard>
                                                                    <ColorAnimation Duration="0" To="#FF73A9D8" Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="buttonContent"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                            <VisualState x:Name="Disabled">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To=".5" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="buttonContent"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <ContentPresenter x:Name="buttonContent" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" TextElement.Foreground="#FF333333" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="1,4,1,9" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Grid.Resources>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="PART_PreviousButton" Grid.Column="0" Focusable="False" HorizontalAlignment="Left" Height="20" Grid.Row="0" Template="{StaticResource PreviousButtonTemplate}" Width="28"/>
                                        <Button x:Name="PART_HeaderButton" Grid.Column="1" FontWeight="Bold" Focusable="False" FontSize="10.5" HorizontalAlignment="Center" Grid.Row="0" Template="{StaticResource HeaderButtonTemplate}" VerticalAlignment="Center"/>
                                        <Button x:Name="PART_NextButton" Grid.Column="2" Focusable="False" HorizontalAlignment="Right" Height="20" Grid.Row="0" Template="{StaticResource NextButtonTemplate}" Width="28"/>
                                        <Grid x:Name="PART_MonthView" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="6,-1,6,6" Grid.Row="1" Visibility="Visible">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                        <Grid x:Name="PART_YearView" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="6,-3,7,6" Grid.Row="1" Visibility="Hidden">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Border>
                            <Rectangle x:Name="PART_DisabledVisual" Fill="{StaticResource DisabledColor}" Opacity="0" RadiusY="2" RadiusX="2" Stretch="Fill" Stroke="{StaticResource DisabledColor}" StrokeThickness="1" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Visibility" TargetName="PART_DisabledVisual" Value="Visible"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding DisplayMode, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Calendar}}}" Value="Year">
                                <Setter Property="Visibility" TargetName="PART_MonthView" Value="Hidden"/>
                                <Setter Property="Visibility" TargetName="PART_YearView" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding DisplayMode, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Calendar}}}" Value="Decade">
                                <Setter Property="Visibility" TargetName="PART_MonthView" Value="Hidden"/>
                                <Setter Property="Visibility" TargetName="PART_YearView" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--#endregion-->
        <!--#endregion-->
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="72"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <TabControl x:Name ="TabControlProect" SelectedIndex="2"  Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="4"  TabStripPlacement="Left" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}" Style="{DynamicResource TabControlStyle}" SelectionChanged="TabControlProect_SelectionChanged" >
                <!--#region Полоцкий государственный экономический колледж-->
                <TabItem Style="{StaticResource MyButtonStyleNazvanie}" Height="73"  Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Focusable="False" />
                <!--#endregion-->

                <!--#region Пропуски-->
                <TabItem Style="{StaticResource MyButtonStyleNazvanie1}" Width="240" Height="48"  Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Focusable="False"/>
                <!--#endregion-->

                <!--#region Режим просмотра-->
                <TabItem x:Name ="TabItemProsmotr"  IsEnabled="true" Width="240" Height="50"  FontFamily="{StaticResource IBMPlexSans}" FontSize="14"  BorderBrush="{x:Null}" Cursor="Hand" Style="{StaticResource TabItem}">
                    <TabItem.Header >
                        <Border  >
                            <Grid Margin="15,0,0,0">
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Margin="0,0,0,0" Height="24"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="24" Source="Image\IconSpisokPropusk.png" />
                                <TextBlock Grid.Column="1" Foreground="#FF4B4B4B" Text="Режим просмотра" Width="183"  Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions >
                            <RowDefinition Height="260"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Calendar
                            xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Name="calendar1" FirstDayOfWeek="Monday"  SelectionMode="MultipleRange"
                            Style="{StaticResource styleCalendar}" CalendarButtonStyle="{DynamicResource Calendar2ButtonStyle}" CalendarDayButtonStyle="{DynamicResource Calendar2DayButtonStyle}" CalendarItemStyle="{DynamicResource Calendar2ItemStyle}" SelectedDatesChanged="calendar1_SelectedDatesChanged" DisplayDateChanged="calendar1_DisplayDateChanged" />

                        <ComboBox Style="{StaticResource CmoboboxStyle1}" Visibility="Hidden" Grid.Row="0" Margin="25,62,0,0" SelectedIndex="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Height="40" FontFamily="{StaticResource IBMPlexSans}" Foreground="#FF329A93" >
                            <TextBlock><Run Text="Дисциплина"/></TextBlock>
                            <TextBlock><Run Text="Учащийся"/></TextBlock>
                            <TextBlock ><Run Text="Причина"/></TextBlock>
                        </ComboBox>
                        <TextBox  TextAlignment="Left"  HorizontalAlignment="Left" Visibility="Hidden" Foreground="#FF329A93" Margin="25,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1" Height="31" Width="240" FontFamily="{StaticResource IBMPlexSans}" Style="{DynamicResource SearchTextBox}"/>
                        <Button Content="Сбросить фильтр" Grid.Column="1" Visibility="Hidden" HorizontalAlignment="Left" Height="40" Margin="25,171,0,0" VerticalAlignment="Top" Width="240" Style="{DynamicResource ObshchiyButtonStyle}" FontFamily="{StaticResource IBMPlexSansBold}" Foreground="#329A93" FontSize="13"/>

                        <ProgressBar x:Name="pgProgress" Visibility="Hidden" HorizontalAlignment="Left" Height="25" Margin="20,222,0,0" VerticalAlignment="Top" Width="220" Foreground="#FF329A93"/>

                        <DataGrid x:Name="dgStudentSkipView" 
                            CanUserAddRows="False" 
                            IsReadOnly="True" 
                            GridLinesVisibility="None" 
                            BorderThickness="0" 
                            AutoGenerateColumns="False" 
                            FontFamily="{StaticResource IBMPlexSansMedium}" 
                            FontSize="14" 
                            Margin="5,0"
                            Grid.ColumnSpan="2" 
                            Grid.Row="1" 
                            Foreground="#329A93"  
                            CellStyle="{DynamicResource SudentSkipDataGridCellStyle}" 
                            Style="{DynamicResource StudentSkipDataGridStyle}"
                            RowHeaderStyle="{DynamicResource StudentSkipDataGridRowHeaderStyle}"
                            RowStyle="{DynamicResource StudentSkipDataGridRowStyle}" 
                            SelectedValuePath="IdStudentSkip"
                            SelectionMode="Extended"
                            SelectedItem="{Binding Select, Mode=TwoWay}" Background="Black">

                            <DataGrid.ToolTip>
                                <ToolTip Background="#f1f2f7" Foreground="Black" Content="Для перехода в режим редактирования кликните правой кнопкной мыши."/>
                            </DataGrid.ToolTip>
                            <DataGrid.ContextMenu>
                                <ContextMenu >
                                    <MenuItem Header="Перейти в режим редактриования" Click="EditRezim_Click" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="id" Binding="{Binding Obj.IdStudentSkip}" Width="Auto" Visibility="Hidden" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}"/>
                                <DataGridTextColumn Header="ДАТА" Binding="{Binding Obj.Date, Mode=TwoWay, StringFormat=dd.MM.yyyy}" Width="Auto" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}"/>
                                <DataGridTextColumn Header="УЧАЩИЙСЯ" Binding="{Binding Obj.Uchashchiysya}" Width="*" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}"/>
                                <DataGridTextColumn Header="ПРИЧИНА" Binding="{Binding Obj.Name}" Width="*" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}"/>
                                <DataGridTextColumn Header="ЧАСЫ" Binding="{Binding Obj.Count_hour}" Width="*" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}" />
                                <DataGridTextColumn Header="ДИСЦИПЛИНА" Binding="{Binding Obj.Name_Subject}" Width="*"  Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}"/>
                                <DataGridTextColumn Header="ВИД ЗАНЯТИЯ" Binding="{Binding Obj.Name_EmpForm}" Width="*" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}" />
                                <DataGridTextColumn Header="ПРЕПОДАВАТЕЛЬ" Binding="{Binding Obj.FIOTeacher}" Width="*" Foreground="Black" FontSize="14" HeaderStyle="{DynamicResource StudentSkipDataGridColumnHeaderStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <GroupBox Grid.Column="1" BorderBrush="#329A93" Header="Фильтры" HorizontalAlignment="Left" FontSize="16" Foreground="#329A93" Height="246" FontFamily="{StaticResource IBMPlexSansBold}" VerticalAlignment="Top" Width="336" Margin="0,2,0,0">
                            <Grid Margin="0,0,0,-4">
                                <ComboBox x:Name="cbStudent"  
                                SelectedValuePath="cn_S"  
                                SelectedIndex="0" 
                                DisplayMemberPath="Uchashchiysya" 
                                Margin="10,31,0,0" 
                                VerticalAlignment="Top" 
                                Style="{DynamicResource ObshchiyComboBoxStyle}" 
                                FontFamily="{StaticResource IBMPlexSans}" HorizontalAlignment="Left" Width="183" RenderTransformOrigin="0.496,1.309"/>
                                <ComboBox x:Name="cbCause"  
                                SelectedValuePath="IdCause"  
                                SelectedIndex="0" 
                                DisplayMemberPath="Name" 
                                Margin="10,91,0,0" 
                                VerticalAlignment="Top" 
                                Style="{DynamicResource ObshchiyComboBoxStyle}" 
                                FontFamily="{StaticResource IBMPlexSans}" HorizontalAlignment="Left" Width="183" RenderTransformOrigin="0.496,1.309"/>
                                <Label Content="Учащийся:" FontSize="14" Foreground="#329A93" FontFamily="{StaticResource IBMPlexSansLight}" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top"/>
                                <Label Content="Причина:" FontSize="14" Foreground="#329A93" FontFamily="{StaticResource IBMPlexSansLight}" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top"/>
                                <Button x:Name="btnFilterStudent" Content="Применить" HorizontalAlignment="Left" Height="27" Margin="215,31,0,0" VerticalAlignment="Top" Width="99" Style="{DynamicResource ObshchiyButtonStyle}" FontFamily="{StaticResource IBMPlexSansLight}" Foreground="#329A93" FontSize="13" Click="btnFilterStudent_Click"/>
                                <Button x:Name="btnFilterCause" Content="Применить" HorizontalAlignment="Left" Height="27" Margin="215,91,0,0" VerticalAlignment="Top" Width="99" Style="{DynamicResource ObshchiyButtonStyle}" FontFamily="{StaticResource IBMPlexSansLight}" Foreground="#329A93" FontSize="13" Click="btnFilterCause_Click"/>
                                <Button x:Name="btnFilterClear" Content="Очистить" HorizontalAlignment="Left" Height="27" Margin="76,180,0,0" VerticalAlignment="Top" Width="170" Style="{DynamicResource ObshchiyButtonStyle}" FontFamily="{StaticResource IBMPlexSansLight}" Foreground="#329A93" FontSize="13" Click="btnFilterClear_Click" RenderTransformOrigin="0.495,0.63"/>
                                <CheckBox x:Name ="checkBox" FontSize="12" Content="Применить 2 фильтра" HorizontalAlignment="Left" Margin="19,132,0,0" VerticalAlignment="Top" FontFamily="{StaticResource IBMPlexSansLight}"/>
                            </Grid>

                        </GroupBox>
                        <Button x:Name="OtchetZaMesyaz" Content="Сформировать отчет за месяц" Click="Button_Click" HorizontalAlignment="Left" Height="26"  VerticalAlignment="Top" Width="219" Style="{DynamicResource ObshchiyButtonStyle}" FontFamily="{StaticResource IBMPlexSansLight}" Foreground="#329A93" FontSize="13" RenderTransformOrigin="0.5,0.5" Background="#00329A93" Margin="21,222,0,0"/>
                        <GroupBox FontSize="16" BorderBrush="#329A93" Header="Сводный отчет" HorizontalAlignment="Left" Foreground="#329A93" Height="246" FontFamily="{StaticResource IBMPlexSansBold}" VerticalAlignment="Top" Width="369" Grid.Column="1" Margin="354,2,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="27*"/>
                                    <ColumnDefinition Width="137*"/>
                                    <ColumnDefinition Width="163*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <GroupBox Header="Месяцы:" Grid.Column ="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="166" FontFamily="{StaticResource IBMPlexSansLight}" VerticalAlignment="Top" FontSize="14" Width="180" Grid.RowSpan="2" Margin="10,5,0,0">
                                    <Grid Margin="0,0,-2,0">
                                        <CheckBox x:Name ="cbSeptember" Content="Сентябрь" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="13"/>
                                        <CheckBox x:Name ="cbOctober" Content="Октябрь" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" FontSize="13"/>
                                        <CheckBox x:Name ="cbNovember" Content="Ноябрь" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" FontSize="13"/>
