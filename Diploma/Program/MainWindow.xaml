                                            <Button x:Name="BtnForCanselEditStudntInfoForDocuments" Content="Отменить" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="50" Width="190" Visibility="Hidden" Style="{DynamicResource CanselButtonStyle}" Click="BtnForCanselEditStudntInfoForDocuments_Click"/>
                                            <Button x:Name="BtnForCreateStudentProfile" Content="Характеристика учащегося" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="50" Width="250" Style="{DynamicResource GetDocument}" Click="BtnForCreateStudentProfile_Click"/>
